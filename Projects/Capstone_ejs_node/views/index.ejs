<%- include("header.ejs")  %>
    <body>
        <div class="header"><h1>Blogger</h1>
            <div class="header-buttons">
                <button>Btn 1</button>
                <button>Btn 2</button>
                <button>Btn 3</button>
                <button>Btn 4</button>
            </div>
        </div>
        <div class="container">
            <div class="a cards"></div>
            <div class="main-posts cards">
                <ul>
                    <% for (let i = 0;i < posts.length; i++) {%>
                    <li class="Posts">
                        <div class="post-user">
                            <img class="user-img" src="images/user-pic.jpg" alt="images/user-pic.jpg">
                            <div class="user-name">
                                <p>Username</p>
                                <div class="posted-time"><%= posts[i].time.slice(0,12) %></div>
                            </div>
                        </div>
                        <div class="post-title"><p><%= posts[i].title %></p></div>
                        <p class="post-text"><%= posts[i].content %></p>
                        <div class="post-footer">
                            <div class="like"><i class="bi bi-hand-thumbs-up"></i></div>
                            <div class="likes"><i class="bi bi-heart-fill"></i>34</div>
                            <div class="dislike"><i class="bi bi-hand-thumbs-down"></i></div>
                            <div class="comments"><i class="bi bi-chat-left-text-fill"></i>23</div>
                            <div class="delete"><i class="bi bi-trash"></i></div>
                        </div>
                    </li>
                    <% } %>
                </ul>
            </div>
            <div class="new-posts cards">
                <form action="/new-post" method="post">
                    <input type="text" placeholder="Title" class="input" name="post-title">
                    <textarea placeholder="Content" rows="5" name="post-content"></textarea>
                    <button type="submit" class="post">Post</button>
                </form>
            </div>
        </div>
    </body>
<!-- </html> -->